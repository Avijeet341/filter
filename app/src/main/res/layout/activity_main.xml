                android:id="@+id/area_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="10000"
                app:thumbColor="@color/expBlue"
                app:trackColorActive="@color/expBlue"
                app:trackColorInactive="@color/black"
                app:values="@array/initial_area_values" />

            <TextView
                android:id="@+id/area_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="0 Sq.ft. - 10000 Sq.ft."
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Benefit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/expBlue"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/lift_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lift Service"
                app:useMaterialThemeColors="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:track="@drawable/track"
                android:thumb="@drawable/thumb"
                android:layout_marginBottom="16dp"
                app:switchPadding="12dp"
                android:textSize="16sp"
                android:theme="@style/CustomSwitchStyle"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/generator_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Generator Service"
                android:textColor="@color/black"
                app:track="@drawable/track"
                app:useMaterialThemeColors="false"
                android:thumb="@drawable/thumb"
                android:layout_marginBottom="16dp"
                app:switchPadding="12dp"
                android:textSize="16sp"
                />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/gas_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gas Service"
                app:useMaterialThemeColors="false"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:track="@drawable/track"
                android:thumb="@drawable/thumb"
                android:layout_marginBottom="16dp"
                app:switchPadding="12dp"
                android:textSize="16sp"
                android:theme="@style/CustomSwitchStyle"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/security_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security Gaurd"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:track="@drawable/track"
                android:thumb="@drawable/thumb"
                app:useMaterialThemeColors="false"
                android:layout_marginBottom="16dp"
                app:switchPadding="12dp"
                android:textSize="16sp"
                android:theme="@style/CustomSwitchStyle"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/parking_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                app:buttonTint="@color/expBlue"
                app:useMaterialThemeColors="false"
                app:track="@drawable/track"
                android:thumb="@drawable/thumb"
                android:layout_marginBottom="16dp"
                app:switchPadding="12dp"
                android:textSize="16sp"
                android:theme="@style/CustomSwitchStyle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="18dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/clear_filter_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear Filter"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_white_button"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/search_button"
                    android:layout_width="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_blue_button" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>